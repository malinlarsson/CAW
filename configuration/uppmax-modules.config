/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 * Nextflow config file for CAW project
 * working on UPPMAX clusters
 * -------------------------------------------------
 * Should be saved either within CAW installation
 * as nextflow.config, or with Nextflow installation
 * as $NXF_HOME/config
 */

process {
  $BuildBWAindexes {
    module = ['bioinfo-tools', 'bwa/0.7.15', 'samtools/1.3']
  }
  $BuildPicardIndex {
    module = ['bioinfo-tools', 'picard/2.0.1']
  }
  $BuildSAMToolsIndex {
    module = ['bioinfo-tools', 'samtools/1.3']
  }
  $BuildVCFIndex {
    module = ['bioinfo-tools', 'IGVtools/2.3.91']
  }
  $CreateRecalibrationTable {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $IndelRealigner {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $MapReads {
    module = ['bioinfo-tools', 'bwa/0.7.13', 'samtools/1.3']
  }
  $MarkDuplicates {
    module = ['bioinfo-tools', 'picard/2.0.1']
  }
  $MergeBams {
    module = ['bioinfo-tools', 'samtools/1.3']
  }
  $RealignerTargetCreator {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $RecalibrateBam {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $RunAlleleCount {
    module = ['bioinfo-tools', 'alleleCount/3.2.2']
  }
  $RunAscat {
    module = ['R/3.3.2','R_packages/3.3.2']
  }
  $RunBcftoolsStats {
    module = ['bioinfo-tools','bcftools/1.3.1']
  }
  $RunConvertAlleleCounts {
    module = ['R/3.2.3']
  }
  $RunFastQC {
    module = ['bioinfo-tools', 'FastQC/0.11.5']
  }
  $RunFreeBayes {
    module = ['bioinfo-tools', 'java/sun_jdk1.8.0_92', 'freebayes/1.0.2']
  }
  $RunHaplotypecaller {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $RunGenotypeGVCFs {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $RunManta {
    module = ['bioinfo-tools', 'samtools/1.3', 'manta/1.0.3']
  }
  $RunMultiQC {
    module = ['bioinfo-tools', 'MultiQC/0.9']
  }
  $RunMutect1 {
    module = ['bioinfo-tools', 'java/sun_jdk1.7.0_25', 'mutect/1.1.5']
  }
  $RunMutect2 {
    module = ['bioinfo-tools', 'GATK/3.7']
  }
  $RunSamtoolsStats {
    module = ['bioinfo-tools', 'samtools/1.3']
  }
  $RunSnpeff {
    module = ['bioinfo-tools', 'snpEff/4.2']
  }
  $RunStrelka {
    module = ['bioinfo-tools', 'strelka/1.0.15']
  }
  $RunVEP {
    module = ['bioinfo-tools', 'vep/87']
  }
}
